<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.post_details.PostDetailsFragment">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/details_post_icon"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="300sp"/>

        <TextView
            android:id="@+id/details_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textSize="22sp"
            android:layout_margin="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/details_post_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:textSize="18sp"
            android:layout_margin="20sp"/>

        <TextView
            android:id="@+id/details_post_description_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/italic"
            android:textSize="14sp"
            android:layout_marginHorizontal="20sp"
            android:gravity="end"
            android:layout_marginBottom="20sp"/>

    </LinearLayout>
</ScrollView>
